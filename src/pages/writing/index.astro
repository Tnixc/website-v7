---
import DashedLine from '@/components/common/DashedLine.astro';
import FormattedDate from '@/components/FormattedDate.astro';
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('writing')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Writing" description="Writing | tnixc.space">
  <ul class="py-20">
    {
      posts.map((post) => (
        <a class="hover:bg-a1" href={`/writing/${post.id}/`}>
          <div class="rotate-6 flex">
            <h4 class="text-2xl -rotate-6">{post.data.title}</h4>
            <DashedLine class="flex-grow min-w-0" />
            <span class="block -rotate-6">
              <FormattedDate date={post.data.pubDate} />
            </span>
          </div>
        </a>
      ))
    }
  </ul>
</Layout>
