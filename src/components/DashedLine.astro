---
const { width, class: className } = Astro.props;
---

<hr
  class:list={['h-px border-0 bg-transparent opacity-20 inline-block', className]}
  style={`
  width: 100%; max-width: ${width};
  `}
/>

<style is:global>
  hr {
    background-image: repeating-linear-gradient(
      to right,
      var(--color-text) 0px,
      var(--color-text) 12px,
      transparent 12px,
      transparent 24px
    );
  }
  .dark {
    hr {
      background-image: repeating-linear-gradient(
        to right,
        var(--color-link) 0px,
        var(--color-link) 12px,
        transparent 12px,
        transparent 24px
      );
    }
  }
</style>
