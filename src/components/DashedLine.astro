---
const { width, class: className } = Astro.props;
const dashColor = 'var(--color-text)';
---

<hr
  class:list={['h-px border-0 bg-transparent opacity-20 inline-block', className]}
  style={`
  background-image: repeating-linear-gradient(to right, ${dashColor} 0px, ${dashColor} 12px, transparent 12px, transparent 24px);
  width: 100%; max-width: ${width};
  `}
/>
