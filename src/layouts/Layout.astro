---
import Aside from "@components/Aside.astro";
import BaseHead from "@components/BaseHead.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { ClientRouter, fade } from "astro:transitions";

interface Props {
	title: string;
	description: string;
	dim?: boolean;
}
const { title, description, dim: isDim } = Astro.props;
---

<html lang="en" transition:name="root" transition:animate={fade({ duration: "4s" })}>
  <head>
    <BaseHead {title} {description} />
    <ClientRouter />
  </head>
  <body
    class="bg-bg text-text/70 font-crimson flex min-h-screen w-screen flex-wrap-reverse items-end justify-start gap-12 p-2 lg:p-20">
    <Aside class="md:sticky md:top-20" dim={isDim} />
    <div class="w-[100ch] max-w-full">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
